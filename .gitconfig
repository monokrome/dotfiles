[user]
  name = Bailey Stoner
  email = monokrome@monokro.me
  signingkey = 2A29B892D4E58749779CD4F45A4CC4638525E9B1

[push]
  default = current

[core]
  whitespace=blank-at-eol,space-before-tab,tab-in-indent,blank-at-eof,cr-at-eol,tabwidth=2
  excludesfile = /Users/monokrome/.config/git/ignored
  precomposeunicode = true
  preloadindex = true
  compression = 9
  safecrlf = true
  eol = lf
  sparseCheckout = true

[help]
  autocorrect = 1

[advice]
  pushNonFastForward = false
  statusHints = false
  commitBeforeMerge = false
  resolveConflicts = false
  implicitIdentity = false
  detachedHead = false
  amWorkDir = false

[branch]
  autosetupmerge = true
  autosetuprebase = always

[clean]
  requireForce = false

[color]
  interactive = true
  branch = true
  status = true
  pager = true
  grep = true
  diff = true
  ui = true

[column]
  branch = auto
  status = auto
  tag = auto
  ui = auto

[commit]
  status = false
  gpgsign = true

[credential]
  useHttpPath = false

[diff]
  suppressBlankEmpty = true
  autorefreshindex = false
  renames = copies
  noprefix = true

[rebase]
  autosquash = true

[mergetool]
  keepBackup = true

[init]
  templatedir = ~/Projects/github.com/monokrome/hookie

[github]
  user = monokrome

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f

[rerere]
  enabled = true
